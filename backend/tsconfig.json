{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types",
      "types" // This tells TypeScript to also look in the 'types' folder
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
